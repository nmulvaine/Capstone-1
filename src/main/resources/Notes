PRODUCT READER
--------------

class ProductReader {
    String itemReader() {
        StringBuilder productData = new StringBuilder();

        try {
            // FileReader to connect with file
            FileReader fileReader = new FileReader("./src/main/resources/products.csv");

            //BufferedReader to manage input stream
            BufferedReader bufReader = new BufferedReader(fileReader);

            String input;
            while ((input = bufReader.readLine()) != null) {
                //Split string by "|"
                String[] productDetails = input.split("\\|");
                if (productDetails.length >= 4) {
                    String sku = productDetails[0];
                    String productName = productDetails[1];
                    String productPrice = productDetails[2];
                    String productDept = productDetails[3];

                    productData.append(" | ").append(sku)
                            .append(" | ").append(productName)
                            .append(" | ").append(productPrice)
                            .append(" | ").append(productDept).append("\n");

                } else {
                    System.out.println("Missing Details: " + input );
                }

            }
            bufReader.close();
        } catch (IOException e) {
            System.out.println("Error!" + e.getMessage());
            e.printStackTrace();
        }

        if (productData.length() == 0) {
            System.out.println("No products to show.");

        }
        return productData.toString();


PRODUCT WRITER
--------------

STARTING AT METHOD
------------------

    String itemWriter() {
        try {
            FileWriter writer = new FileWriter( "./src/main/resources/products.csv" );

// Sample writing
            writer.append("100|Computer|1200.00\n");
            writer.append("101|Cellphone|699.99\n");
            writer.append("102|Backup Battery|129.99\n");

            writer.close();

            System.out.println("Product list successfully updated.");
        } catch (IOException e) {
            System.out.println("Error. Unable to write to products");
        }
return itemWriter();




MENU NAVIGATOR
--------------

package com.pluralsight.workbook3;

import java.io.FileReader;
import java.util.Scanner;

public class MenuNavigation {
    public static Boolean isRunning = true;
    ProductReader productReader = new ProductReader();
    ProductWriter productWriter = new ProductWriter();
    OnlineStoreApp onlineStoreApp = new OnlineStoreApp();

    public void Navigator() {
        try (Scanner scanner = new Scanner(System.in)) {
            while (isRunning) {

                System.out.println("Please enter your option: " + "\nOr press 3 to return to the menu.");
                String userInput = scanner.nextLine();
                switch (userInput) {
                    case "1":
                        String productData = productReader.itemReader();
                        System.out.println("Available Products:");
                        System.out.println(productData);
                        break;

                    case "2":
                        System.out.println("Opening Checkout.");
                        productWriter.itemWriter();
                        System.out.println(productData);
                        break;

                    case "3":
                        // Need to have it return to main menu
                        //isRunning = false;

                        return;

                    case "4":
                        System.out.println("Exiting Application.");
                        isRunning = false;
                        OnlineStoreApp.mainMenu = false;

                        break;

                    default:
                        System.out.println("Invalid option. Please select an option from the menu");
                        break;


